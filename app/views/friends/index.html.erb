<html>
  <head>

  </head>

<body>
<h1> Manage Friends </h1>
  <% unless @user == current_user %>
    You do not have permission to access this page!
  <% else %>
  
    <div style="width: 1000px;">
      <div style="width: 333px;">
        Viewing all friends: (<%= current_user.friends.count %>)
        <%= render :partial => 'friends/friends' %>
      </div>
      <div style="width: 333px;">
        Requested Friends: (<%= current_user.requested_friends.count %>)
        <%= render :partial => 'friends/requested_friends' %>
      </div>
      <div style="width: 333px;">
        Pending Friends: (<%= current_user.pending_friends.count %>)
        <%= render :partial => 'friends/pending_friends' %>
      </div>
    </div>
     
<% end %>
</body>
</html>
